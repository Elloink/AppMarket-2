<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/sys_item_base"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/soft_down_img"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_margin=" 5dp"
        android:layout_weight="1"
        android:src="@drawable/app_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/soft_down_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="6"
            android:singleLine="true"
            android:text="帅哥"
            android:textColor="@color/webapp_black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/soft_down_daxiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:text="4.83m"
                android:textColor="@color/webapp_black" />

            <TextView
                android:id="@+id/run_sudu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="165k/s"
                android:textColor="@color/webapp_black" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pb_downloading"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:max="1000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:src="@drawable/wash_divider" />

        <TextView
            android:id="@+id/soft_down_operate"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="下载"
            android:textColor="@color/webapp_black"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>