<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_content_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/sys_back_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/status_title"
                android:gravity="center_vertical"
                android:textColor="@color/base_font_yellow" >

                <TextView
                    android:id="@+id/download_his"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:text="下载队列"
                    android:textColor="@color/webapp_black"
                    android:textSize="14sp" />
            </RelativeLayout>

            <ListView
                android:id="@+id/downloading_lv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/status_title"
                android:gravity="center_vertical"
                android:textColor="@color/base_font_yellow" >

                <TextView
                    android:id="@+id/download_his_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:text="下载历史(12)"
                    android:textColor="@color/webapp_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/clean_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:text="清空记录"
                    android:textColor="@color/webapp_black"
                    android:textSize="14sp" />
            </RelativeLayout>

            <ListView
                android:id="@+id/downloaded_lv_his"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>