                android:paddingLeft="2dp"
                android:text="@string/app_details_entitysize_hint"
                android:textColor="@color/webapp_black" />
        </TableRow>

        <TableRow
            android:id="@+id/app_details_infos_updatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <TextView
                android:id="@+id/app_details_infos_tv_updatetime"
