        <!-- android:text="@string/app_details_category_hint" -->
        <!-- android:textColor="@color/webapp_black" -->
        <!-- android:textSize="20sp" /> -->
        <!-- </TableRow> -->

        <TableRow
            android:id="@+id/app_details_infos_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <TextView
                android:id="@+id/app_details_infos_tv_version"
                android:text="@string/app_details_verion"
                android:textColor="@color/webapp_black" />

            <TextView
                android:id="@+id/app_details_infos_tv_version_content"
                android:paddingLeft="2dp"
                android:text="@string/app_details_verion_hint"
                android:textColor="@color/webapp_black"
              />
        </TableRow>

        <TableRow
            android:id="@+id/app_details_infos_downloads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <TextView
                android:id="@+id/app_details_infos_tv_downloads"
                android:text="@string/app_details_downloads"
                android:textColor="@color/webapp_black" />

            <TextView
                android:id="@+id/app_details_infos_tv_downloads_content"
                android:paddingLeft="2dp"
                android:text="@string/app_details_downloads_hint"
                android:textColor="@color/webapp_black" />
        </TableRow>

        <TableRow
